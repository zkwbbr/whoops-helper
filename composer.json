{
    "name": "zkwbbr/whoops-helper",
    "type": "library",
    "description": "Log error once and notify admin (via email or push notification)",
    "keywords": ["php", "whoops", "error handling", "error", "pushover", "push notification", "email"],
    "license": "MIT",
    "authors": [
        {
            "name": "zkwbbr/whoops-helper contributors",
            "homepage": "https://github.com/zkwbbr/whoops-helper/graphs/contributors"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zkwbbr\\WhoopsHelper\\": "src"
        }
    },
    "require": {
        "php": ">=7.4",
        "zkwbbr/utils": "^1.0 || ^2.0",
        "metarush/email-fallback": "^4.0",
        "metarush/data-mapper": "^1.0",
        "filp/whoops": "^2.0",
        "php-pushover/php-pushover": "^1.0"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^3.0",
        "phpunit/phpunit": "^9.0"
    }
}
